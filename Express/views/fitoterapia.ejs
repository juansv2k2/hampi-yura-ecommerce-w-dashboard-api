    <main id="main-content">
      <!-- Hero Section -->
      <section class="padding-24 margin-top-48">
        <div class="content-medicine">
          <div class="tx-medicine">
            <img
              src="/images/filosofia.png"
              alt="Fitoterapia - Plantas Medicinales"
              class="img-medicina border-8"
            />
