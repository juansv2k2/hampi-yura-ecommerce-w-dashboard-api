<!DOCTYPE html>
<html lang="en">
    <script
        defer
        src="/js/productCreateValidator.js"
        type="text/javascript"
    ></script>

    <!--Acá va el head-->
    <%- include ("partials/head.ejs") %>

    <body class="body">
        <!--Acá va el header-->
        <%- include ("partials/header.ejs") %>
        <main id="main-content">
            <section class="padding-24">
                <div>
                    <form
                        id="createForm"
                        class="register-form"
                        action="/products"
                        method="POST"
                        enctype="multipart/form-data"
                    >
                        <div>
                            <h2>Crear producto</h2>
                            <ul id="errores" class="hidden"></ul>
                        </div>

                        <div class="form-input">
                            <label class="main-label" for="name"></label>
                            <input
                                id="productName"
                                type="text"
                                name="name"
                                placeholder="Nombre del producto"
                            />
                            <% if (locals.errors && errors.name) { %>
                            <div><%= errors.name.msg %></div>
                            <% } %>
                        </div>
                        <div class="form-input">
                            <label class="main-label" for="price"></label>
                            <input
                                id="price"
                                class=""
                                type="number"
                                step="0.01"
                                name="price"
                                placeholder="Precio: $12.99"
                            />
                        </div>
                        <div class="form-input">
                            <label class="main-label" for="description"></label>
                            <input
                                id="description"
                                class=""
                                type="text"
                                name="description"
                                placeholder="Descripción"
                            />
                            <% if (locals.errors && errors.description) { %>
                            <div><%= errors.description.msg %></div>
                            <% } %>
                        </div>
                        <div class="form-input">
                            <label class="main-label" for="image"></label>
                            <input
                                id="image"
                                class=""
                                type="file"
                                name="image"
                                placeholder="Foto del producto"
                                accept="image/*"
                            />
                            <% if (locals.errors && errors.image) { %>
                            <div><%= errors.image.msg %></div>
                            <% } %>
                        </div>
                        <div class="form-input">
                            <label class="main-label" for="stock"></label>
                            <select
                                id="stock"
                                class="w-100"
                                type="text"
                                name="stock"
                                placeholder="Stock"
                            >
                                <option value="" disabled selected>
                                    Stock
                                </option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                        <div class="form-input">
                            <label class="main-label" for="category"></label>
                            <select
                                id="category"
                                class="w-100"
                                type="text"
                                name="category"
                                placeholder="Categoria"
                            >
                                <option value="" disabled selected>
                                    Categoría
                                </option>
                                <option value="Belleza">Belleza</option>
                                <option value="Higiene">Higiene</option>
                                <option value="Fitoterapia">Fitoterapia</option>
                            </select>
                        </div>
                        <div class="form-input">
                            <label class="main-label" for="destacado"></label>
                            <select
                                id="destacado"
                                class="w-100"
                                type="text"
                                name="destacado"
                                placeholder="Destacado"
                            >
                                <option value="" disabled selected>
                                    ¿Destacado?
                                </option>
                                <option value="1">Sí</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <!-- <div class="form-input">
                <label class="main-label" for="name"></label>
                <select class="border-5" type="text" name="name" placeholder="Tamaños" required >
                  <option>tam1</option>
                  <option>tam2</option>
                </select>
              </div> -->
                        <div class="register-buttons">
                            <button
                                class="
                                    w-100
                                    boton-filo
                                    tx-blanco
                                    bg-higiene-claro
                                    border-button
                                "
                                type="submit"
                            >
                                Aceptar
                            </button>
                            <button
                                class="
                                    w-100
                                    boton-filo
                                    tx-higiene-claro
                                    background-color
                                    border-button
                                "
                                type="reset"
                            >
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </main>

        <!--Acá va el footer-->
        <%- include ("partials/footer.ejs") %>
    </body>
</html>
