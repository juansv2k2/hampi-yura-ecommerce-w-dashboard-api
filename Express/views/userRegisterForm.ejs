<!DOCTYPE html>
<html lang="en">
<script defer src="/js/userRegisterValidator.js" type="text/javascript"></script>
<!--Acá va el head-->
<%- include ("partials/head.ejs") %>

	<body class="body">
		<!--Acá va el header-->
		<%- include ("partials/header.ejs") %>
			<main id="main-content">
				<section class="padding-24 margin-bottom-48">
					<div>
						<form id="userRegisterForm" class="register-form" action="/user/register" method="POST" enctype="multipart/form-data">
							<div>
								<h2 class="text-center">Registrate</h2>
								<p class="text-center">Por favor completá la siguiente información</p>
							<!--</div>
							<ul class="errores">
    						</ul>-->
							<ul id="errores" class="hidden"></ul>				
							<div class="form-input margin-auto">
								<label class="main-label" for="name"></label>
								<input class="" id="userName" type="text" name="fullName"
									placeholder="Nombre y apellido"
									value="<%= locals.oldData ? oldData.fullName : null%>" />
									<!--<small class="text-danger erName"></small>-->
									<% if (locals.errors && errors.fullName) { %>
									<div>
										<%= errors.fullName.msg %>
									</div>
									
									<% } %>
									
							</div>
							<div class="form-input margin-auto">
								<label class="main-label" for="birthdate"></label>
								<input class="" id="birthdate" type="date" name="birthdate"
									placeholder="Fecha de nacimiento"
									value="<%= locals.oldData ? oldData.birthdate : null%>" />
								<% if (locals.errors && errors.birthdate) { %>
									<div>
										<%= errors.birthdate.msg %>
									</div>
									<% } %>
							</div>
							<div class="form-input margin-auto">
								<label class="main-label" for="email"></label>
								<input class="" id="email" type="email" name="email"
									placeholder="Dirección de email: persona@mail.com"
									value="<%= locals.oldData ? oldData.email : null%>" />
								<% if (locals.errors && errors.email) { %>
									<div>
										<%= errors.email.msg %>
									</div>
									<% } %>
							</div>
							<div class="form-input margin-auto">
								<label class="main-label" for="avatar"></label>
								<input class="" type="file" name="avatar" id="avatar" accept="image/*"
									value="<%= locals.oldData ? oldData.avatar : null%>" />
								<% if (locals.errors && errors.avatar) { %>
									<div>
										<%= errors.avatar.msg %>
									</div>
									<% } %>
							</div>
							<div class="form-input margin-auto">
								<label class="main-label" for="password"></label>
								<input class="" id="password" type="password" name="password"
									placeholder="Contraseña" /><i class="far fa-eye-slash" id="togglePassword"></i> </i>
								
									<small id="msgContraseña" class="hidden">Tu contraseña debe contener por lo menos 8 caracteres y combinar: letras, números y caracteres especiales.</small>
								<% if (locals.errors && errors.password) { %>
									<div>
										<%= errors.password.msg %>
									</div>
									<% } %>
							</div>
							
							<div class="form-input margin-auto flex w-100 margin-top-16 align-center">
								<input type="checkbox" value="1" class="w-10" required />
								<small class="w-90 register-he_leido tx-negro text-justify">
									
									He leido y acepto el tratamiento de mis datos explicado en la
									politica de privacidad y en los terminos y condiciones.
								</small>
							</div>
							<div class=" margin-auto">
								<button class="boton-form w-100" type="submit" id="btnSubmit">CREAR MI CUENTA</button>
							</div>
						</form>
					</div>
				</section>
			</main>

			<!--Acá va el footer-->
			<%- include ("partials/footer.ejs") %>
	</body>

</html>